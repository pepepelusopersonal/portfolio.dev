---
import Layout from '../layouts/Layout.astro';
import Badge from '../components/Badge.astro';
import SocialPill from '../components/SocialPill.astro';
import LinkedInIcon from '../components/icons/LinkedIn.astro';
import GitHubIcon from '../components/icons/GitHub.astro';
import MailIcon from '../components/icons/Mail.astro';
import Experience from '../components/Experience.astro';
import SectionContainer from '../components/SectionContainer.astro';
import Briefcase from '../components/icons/Briefcase.astro';
import CodeIcon from '../components/icons/Code.astro';
import Projects from '../components/Projects.astro';
---

<Layout
	title="Portfolio de Pablo Jose Robalino Lucero - Desarrollador y Programador Web con un año de experiencia"
	description='Contrata a Pablo, un desarrollador frontend con experiencia en React, Tailwind CSS, JavaScript, HTML y CSS. Especializado en crear soluciones web únicas y atractivas. ¡Contáctame hoy mismo!'
>
	<main>
		<SectionContainer class="pt-44 pb-32">
			<img class="rounded-full size-12 mb-4" src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcSc9iUIvFF20Qr3wp8uuPWqIL9NIhS4MT187w&s" alt="Pablo Photo" />
			<h1 class="text-white text-3xl md:text-4xl lg:text-5xl font-bold flex flex-row gap-x-2 pb-6 lg:pb-10">Hey, soy Pablo <a href="https://ec.linkedin.com/in/pablo-robalino-lucero" target="_blank" rel="noopener" class="flex items-center"><Badge>Disponible para trabajar</Badge></a></h1>
			<h2 class="text-xl lg:text-2xl text-wrap max-w-[700px]"><span>+1 año de experiencia.</span><span class="text-yellow-200/90"> Desarrollador Frontend.</span><span class="text-red-200/90"> De Ibarra, Ecuador</span><span class="opacity-75"> Especializado en soluciones web únicas.</span></h2>
			<nav class="flex gap-4 mt-8 flex-wrap">
				<SocialPill href="https://ec.linkedin.com/in/pablo-robalino-lucero">
					<LinkedInIcon class="size-4 md:size-6" />
					LinkedIn
				</SocialPill>
				<SocialPill href="https://github.com/pepepeluso">
					<GitHubIcon class="size-4 md:size-6" />
					GitHub
				</SocialPill>
				<SocialPill href="mailto:pablorobalinotrabajo@hotmail.com">
					<MailIcon class="size-4 md:size-6" />
					pablorobalinotrabajo@hotmail.com
				</SocialPill>
			</nav>
		</SectionContainer>
		<SectionContainer id="experiencia">
			<h2 class="text-3xl font-semibold mb-6 flex gap-x-3 items-center">
				<Briefcase class="size-7" />
				Experiencia laboral
			</h2>
			<Experience />
		</SectionContainer>
		<SectionContainer id="proyectos">
			<h2 class="text-3xl font-semibold mb-6 flex gap-x-3 items-center">
				<CodeIcon class="size-7" />
				Proyectos
			</h2>
			<Projects />
		</SectionContainer>
	</main>
</Layout>
